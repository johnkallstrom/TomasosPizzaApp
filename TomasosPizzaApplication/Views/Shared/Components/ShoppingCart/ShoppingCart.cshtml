@model List<Matratt>

<h1>Din beställning</h1>
<hr />
<ul>
    @foreach (var item in Model)
    {
    <div class="wrapper">
        <li class="name"><img src="~/img/minus-square.svg" class="remove" />@item.MatrattNamn <span class="price">@item.Pris kr</span></li>
    </div>
    }
</ul>
<h3>Total: @Model.Sum(i => i.Pris) kr</h3>