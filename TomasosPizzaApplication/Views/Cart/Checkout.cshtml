@model List<CartItemViewModel>

@{
    ViewData["Title"] = "Kassa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="checkout">
    <div id="container">
        <h1>Din beställning</h1>
        <hr />
        <ul>
            @foreach (var item in Model)
            {
                <div class="wrapper">
                    <li class="name">
                        <div id="counter">

                            <span class="counter-value">Antal: @item.ItemCount</span>
                        </div>
                        @item.ItemName
                        <span class="price">@item.ItemTotal kr</span>
                    </li>
                </div>
            }
        </ul>
        <h3>Total: @Model.Sum(i => i.ItemTotal) kr</h3>
        <div class="button-wrapper">
            <input type="button" class="button" value="Slutför köp" onclick="location.href='@Url.Action("AddOrder", "Order")'" />
        </div>
    </div>
</section>