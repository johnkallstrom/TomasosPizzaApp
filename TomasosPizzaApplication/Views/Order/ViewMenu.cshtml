@model MenuViewModel

<section id="menu">
    <div class="container">
        <div id="pizza">
            <h1>Pizza</h1>
            <ul id="pizza-list">
                @foreach (var pizza in Model.PizzaDishes)
                {
                <div class="wrapper">
                    <li class="name">@pizza.MatrattNamn <span><img src="~/img/plus-square.svg" class="add" /></span><span class="price">@pizza.Pris kr</span></li>

                    @foreach (var ingredient in @pizza.MatrattProdukt)
                    {
                        <li class="ingredients">@ingredient.Produkt.ProduktNamn</li>
                    }
                </div>
                }
            </ul>
        </div>

        <div id="pasta">
            <h1>Pasta</h1>
            <ul id="pasta-list">
                <div class="wrapper">
                    @foreach (var pasta in Model.PastaDishes)
                    {
                        <li class="name">@pasta.MatrattNamn <span><img src="~/img/plus-square.svg" class="add" /></span><span class="price">@pasta.Pris kr</span></li>

                        @foreach (var ingredient in @pasta.MatrattProdukt)
                        {
                            <li class="ingredients">@ingredient.Produkt.ProduktNamn</li>
                        }
                    }
                </div>
            </ul>
        </div>

        <div id="salad">
            <h1>Sallad</h1>
            <ul id="salad-list">
                <div class="wrapper">
                    @foreach (var salad in Model.SaladDishes)
                    {
                        <li class="name">@salad.MatrattNamn <span><img src="~/img/plus-square.svg" class="add" /></span><span class="price">@salad.Pris kr</span></li>

                        @foreach (var ingredient in @salad.MatrattProdukt)
                        {
                            <li class="ingredients">@ingredient.Produkt.ProduktNamn</li>
                        }
                    }
                </div>
            </ul>
        </div>
    </div>
</section>