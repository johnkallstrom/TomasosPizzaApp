@model TomasosPizzaApplication.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/login.css" rel="stylesheet" />
<div class="wrapper">
    <form asp-controller="User" asp-action="Login" method="post">
        <div class="header">
            <h1>Logga in</h1>
        </div>

        <div class="form-group">
            <span asp-validation-for="@Model.Username"></span>
            <input type="text" asp-for="@Model.Username" maxlength="20" placeholder="Användarnamn" />
        </div>

        <div class="form-group">
            <span asp-validation-for="@Model.Password"></span>
            <input type="password" asp-for="@Model.Password" maxlength="20" placeholder="Lösenord" />
        </div>

        <div class="form-group">
            <input type="submit" value="Logga in" class="button" />
        </div>
    </form>
</div>

