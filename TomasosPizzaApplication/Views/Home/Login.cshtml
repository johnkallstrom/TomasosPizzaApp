@model TomasosPizzaApplication.Models.Kund

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/login.css" rel="stylesheet" />
<div class="wrapper">
    <form asp-controller="Home" asp-action="Login" method="post">
        <div class="header">
            <h1>Logga in</h1>
        </div>

        <div class="form-group">
            <span asp-validation-for="AnvandarNamn"></span>
            <input type="text" asp-for="AnvandarNamn" maxlength="20" placeholder="Användarnamn" />
        </div>

        <div class="form-group">
            <span asp-validation-for="Losenord"></span>
            <input type="password" asp-for="Losenord" maxlength="20" placeholder="Lösenord" />
        </div>

        <div class="form-group">
            <input type="submit" value="Logga in" class="button" />
        </div>
    </form>
</div>

